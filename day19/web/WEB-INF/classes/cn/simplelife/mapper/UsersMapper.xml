<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.simplelife.dao.IUsersDAO">
    <select id="check" resultType="cn.simplelife.domain.Users">
        SELECT *
        FROM users
        WHERE username = #{username}
          AND password = #{password}
    </select>

    <select id="checkUsersByUsername" resultType="cn.simplelife.domain.Users">
        SELECT *
        FROM users
        WHERE username = #{username}
    </select>
</mapper>