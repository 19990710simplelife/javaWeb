<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--配置自定义的servlet，交给tomcat服务器来管理-->
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>cn.simplelife.work._01hello.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletConfigServlet</servlet-name>
        <servlet-class>cn.simplelife.work._05servletconfig.ServletConfigServlet</servlet-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <!--取值：1-10
        默认值：-1 值越小，优先级越高
        -->
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!--配置浏览器访问servlet的资源路径名称-->
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletConfigServlet</servlet-name>
        <url-pattern>/ServletConfigServlet</url-pattern>
    </servlet-mapping>
</web-app>
